@model IEnumerable<Models.Framework.THAMSO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div class="main-form" id="main-form" >
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Quản lý Tham số</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <div id="dataTable_filter" class="dataTables_filter">
                                
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;color:black">
                                <thead>
                                    <tr role="row">
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: auto;">Mã tham số</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: auto;">Tên tham số</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: auto;">Kiểu dữ liệu</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: auto;">Giá trị</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: auto;">Tình trạng</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Salary: activate to sort column ascending"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr role="row" class="odd">
                                            <td class="sorting_1">@item.MATHAMSO</td>
                                            <td>@item.TENTHAMSO</td>
                                            <td>@item.KIEU</td>
                                            <td>@item.GIATRI</td>
                                            <td>@(item.TINHTRANG.Value==true?"Kích hoạt":"Hủy")</td>
                                            <td>
                                                <a onclick="openFormForEdit('@item.MATHAMSO','@item.TENTHAMSO','@item.GIATRI','@item.TINHTRANG')" style="color:blue;float: left;" href="#">Sửa</a>
                                                
                                            <td>
                                        </tr>
                                    }
                                </tbody>
                                
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-5">
                            <div class="dataTables_info" id="dataTable_info" role="status" aria-live="polite"></div>
                        </div>
                        <div class="col-sm-12 col-md-7">
                            <div class="dataTables_paginate paging_simple_numbers" id="dataTable_paginate">
                                <ul class="pagination">
                                    
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<!--FORM THEM-->
<div class="form-popup" id="edit-form" style="color:black">
    <form class="form-container">
        <h1>Tham số</h1>
        <input id="ma-tham-so-edit" type="text" placeholder="Mã tham số" value="" hidden>
        <label for="psw"><b>Tên tham số</b></label>
        <input id="ten-tham-so-edit" type="text" placeholder="Nhập tên tham số" value="" disabled>
        <label for="psw"><b>Giá trị</b></label>
        <input id="gia-tri-tham-so-edit" type="number" placeholder="Nhập giá trị" value="">
        <label for="psw"><b>Tình trạng</b></label>
        <select class="chon-tinh-trang" id="tinh-trang-select">
            <option value="1">Kích hoạt</option>
            <option value="0">Hủy</option>
        </select>
        <h6> </h6>
        <h6 style="height:10px"></h6>
        <button type="button" class="btn" onclick="editThamSo()" id="btn-sua">Sửa</button>
        <button type="button" class="btn cancel" onclick="closeForm()">Thoát</button>
    </form>
</div>

<script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
<script>
    function openFormForEdit(maTS,tenTS,giaTri,tinhTrang) {
        document.getElementById("edit-form").style.display = "block";
        document.getElementById("main-form").className = "main-form-hide";
        document.getElementById("main-form").style.display = "none";
        $('#ma-tham-so-edit').val(maTS).change();
        $('#ten-tham-so-edit').val(tenTS).change();
        $('#gia-tri-tham-so-edit').val(giaTri).change();
        if(tinhTrang==true)
            $('chon-tinh-trang').val(1).change();
        else
            $('chon-tinh-trang').val(0).change();
    }
    function closeForm() {
        document.getElementById("edit-form").style.display = "none";
        document.getElementById("main-form").className = "main-form";
        document.getElementById("main-form").style.display = "block";
    }

    
    function editThamSo() {
        const url = '../../api/ThamSoApi?';
        // The data we are going to send in our request
        let params = {
            maThamSo:$('#ma-tham-so-edit').val(),
            giaTri: $('#gia-tri-tham-so-edit').val(),
            tinhTrang: $("select.chon-tinh-trang").children("option:selected").val(),
        }

        let query = Object.keys(params)
                 .map(k => encodeURIComponent(k) + '=' + encodeURIComponent(params[k]))
                 .join('&');
        // The parameters we are gonna pass to the fetch function
        let fetchData = {
            method: 'PUT',
            headers: {
                'Accept': 'application/json',
                'Content-Type': 'application/json'
            },
        }

        fetch(url + query, fetchData)
        .then(function (res) {
            // Handle response you get from the server
            return res.json();
        }).then(function (data) {
            alert(data);
            location.reload();
        });
    }

</script>


