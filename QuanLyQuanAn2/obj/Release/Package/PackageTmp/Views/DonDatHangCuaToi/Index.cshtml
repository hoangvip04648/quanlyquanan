    .textFontStyle {
        color: black;
    }
    .product-image {
    width: auto;
    height:50px;
    }
    .don-hang-table{
        width:80%;
        
    }
    .rowItem{
        border-style: ridge ;
    }
    .tditem{
        padding-top: 5px;
      padding-right: 10px;
      padding-bottom: 5px;
      padding-left: 10px;
    }
    a.LinkButton {
      border-style: solid;
      border-width : 1px 1px 1px 1px;
      text-decoration : none;
      padding : 4px;
      border-color : #000000;
      color:black;
    }
</style>

